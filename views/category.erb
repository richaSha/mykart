<h2> <%= @category.name %> </h2>
<form class="" action="/update/category/<%= @category.id %>" method="post">
  <div class="form-group">
    <input type="hidden" name="_method" value="patch">
    <label for="new-name">Category's New Name</label>
    <input type="text" name="new-name" class="form-control">
    <button type="submit" name="button" class="btn btn-success">Update</button>
  </div>
</form>
<form class="" action="/delete/category/<%= @category.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit" name="button" class="btn btn-danger">Delete</button>
</form>
