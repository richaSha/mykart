<br><br>
<h2>products</h2>
<div class="row">
  <div class="col-md-6">
    <% if session['error'] %>
      <% session['error'].errors.full_messages.each do |message| %>
      <ul>
        <li class="error"> <%= message %> </li>
      </ul>
      <% end %>
    <% end %>
    <form class="" action="/add_product" method="post">
      <label for="category-list">Category List</label>
      <select class="" name="category-id" type='text'>
        <% @category_list.each do |category| %>
        <option value="<%= category.id%>"> <%= category.name %> </option>
        <% end %>
      </select>
      <div class="form-group">
        <label for="product-name">Product Name</label>
        <input type="text" name="name" class="form-control">
      </div>
      <div class="form-group">
        <label for="product-description">Description</label>
        <textarea name="description" rows="8" cols="50"></textarea>
      </div>
      <div class="form-group">
        <label for="product-quantity">Quantity</label>
        <input type="number" name="quantity" class="form-control">
      </div>
      <div class="form-group">
        <label for="list-price">Price</label>
        <input type="number" name="list-price" class="form-control">
      </div>
      <div class="form-group">
        <label for="sale-price">Sale Price</label>
        <input type="number" name="sale-price" class="form-control">
      </div>
      <button type="submit" name="button" class="btn">Add Product</button>
    </form>
  </div>
  <div class="col-md-6">
    <% if @products.any? %>
      <% @products.each do |product| %>
      <ul>
        <li><a href="/product/<%= product.id%>"> <%= product.name %> </a></li>
      </ul>
      <% end %>
    <% else %>
      <p>No products in database</p>
    <% end %>
  </div>
</div>

<a href="/admin_page"><button type="button" name="button" class="btn">Return to Admin Page</button></a>
