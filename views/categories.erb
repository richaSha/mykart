<div class="row">
  <div class="col-md-6">
    <% if session['error'] %>
      <% session['error'].errors.full_messages.each do |message| %>
      <ul>
        <li class="error"> <%= message %> </li>
      </ul>
      <% end %>
    <% end %>
    <form class="" action="/add_category" method="post">
      <div class="form-group">
        <label for="name">New Category</label>
        <input type="text" name="category-name" class="form-control">
      </div>
      <button type="submit" name="button" class="btn">Add Category</button>
    </form>
  </div>
  <div class="col-md-6">
    <% if @category_list.any? %>
      <% @category_list.each do |category| %>
        <ul>
          <li><a href="/category/<%= category.id %>"> <%= category.name %> </a></li>
        </ul>
      <% end %>
    <% else %>
      <p>Currently no Categories in database</p>
    <% end %>
  </div>
</div>

<br>

<footer>
  <a href="/admin_page"><button type="button" name="button" class="btn">Return to Admin Page</button></a>
</footer>
